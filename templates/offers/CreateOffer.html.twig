<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="Create a new offer" />
        <meta name="author" content="Your Website" />
        <title>Create Offer - Your Website</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="{{ asset('/styles/assets/favicon.ico') }}" />
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="{{ asset('/styles/css/styles.css') }}" rel="stylesheet" />
        <style>
            .custom-input {
                border-radius: 10px;
                padding: 15px;
                border: 1px solid #ddd;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            }
            .custom-form-label {
                font-weight: bold;
                color: #555;
            }
            .custom-btn {
                background-color: #007bff;
                color: #fff;
                padding: 10px 20px;
                border-radius: 8px;
                transition: all 0.3s ease-in-out;
            }
            .custom-btn:hover {
                background-color: #0056b3;
            }
        </style>
    </head>
    <body class="d-flex flex-column">
        {%
            include "./header/header.html.twig"
        %}
        <main class="flex-shrink-0">
            <!-- Create Offer Section-->
            <section class="py-5">
                <div class="container px-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card shadow-sm border-0">
                                <div class="container mt-5">
                                    <h1 class="mb-4 text-center">Create a New Job Offer</h1>
                                    <div class="card shadow-sm p-4">
                                        {{ form_start(form) }}
                                            <div class="row">
                                                {% for field in form %}
                                                    <div class="col-md-6 mb-3">
                                                        <label for="{{ field.vars.id }}" class="form-label">{{ field.vars.label }}</label>
                                                        {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                                        <div class="form-text text-danger">{{ form_errors(field) }}</div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                            <div class="d-flex justify-content-center align-items gap-2 mt-4">
                                                <button type="submit" class="w-100 btn btn-primary">Submit</button>
                                                <a href="{{ path('offers_list') }}" class="w-100 btn btn-secondary">Cancel</a>
                                            </div>
                                        {{ form_end(form) }}
                                        <datalist id="languages">
                                            <option value="English"></option>
                                            <option value="French"></option>
                                            <option value="Spanish"></option>
                                            <option value="German"></option>
                                            <option value="Italian"></option>
                                            <option value="Chinese"></option>
                                            <option value="Japanese"></option>
                                        </datalist>
                                        <datalist id="contractTypes">
                                            <option value="Full-Time"></option>
                                            <option value="Part-Time"></option>
                                            <option value="Temporary"></option>
                                            <option value="Internship"></option>
                                            <option value="Freelance"></option>
                                            <option value="Remote"></option>
                                        </datalist>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <!-- Footer-->
        {%
            include "./footer/footer.html.twig"
        %}
        <!-- Scripts-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset('/styles/js/scripts.js') }}"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form.needs-validation');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    form.classList.add('was-validated');
                }
            }, false);
            });
        </script>
    </body>
</html>
